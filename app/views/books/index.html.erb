<h1>Listing books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Field</th>
    <th>Publisher</th>
    <th>Published date</th>
    <th>Edition</th>
    <th>Amazon url</th>
    <th>Bookimg</th>
    <th>Note</th>
    <th>Isbn</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.field_id %></td>
    <td><%= book.publisher_id %></td>
    <td><%= book.published_date %></td>
    <td><%= book.edition %></td>
    <td><%= book.amazon_url %></td>
    <td><%= book.bookimg %></td>
    <td><%= book.note %></td>
    <td><%= book.ISBN %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

