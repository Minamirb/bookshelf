<h1>Listing books</h1>

<table>
  <tr>
    <th>状態</th>
    <th>書名</th>
    <th>分野</th>
    <th>最終更新</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.study.status %></td>
    <td><%= book.title %></td>
    <td>
      <% book.categories.each_with_index do |category, idx| %>
        <%= "," if idx != 0 %>
        <%= category.name %>
      <% end %>
    </td>
    <td><%= book.updated_at.to_s(:db) %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

